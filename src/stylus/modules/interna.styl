.img-responsive 
	width 100% !important
	
.banner-interna
	width 100%
	background-image url("../images/Img-Banner-Intern.jpg")
	padding 3% 0
	background-size cover
	
	p.titulo-banner-interna
		font-family $RobotoR	
		font-size 6rem
		color $Blanco
		text-shadow 1px 1px 1px $Negro
		text-align center
		width 80%
		margin-left calc(50% - 40%)
		text-transform uppercase
		
.con-tmenu-Inter
	padding 0
	
.activo
		background-color $GrisOsc !important
		text-decoration none	
ul.menu-interna-opci
	margin 0
	padding 0
	height 50px
	
	li
		list-style none
		float left
		padding 12px 0
		width calc(100% / 12)
		border-right 1px solid $VerdeOsc
		padding 14px
		text-align center
		font-size 1.5rem
		background-color $VerdeCla
		
		&:last-child
			
			border none
		&:hover, &:active, &:focus
				background-color $GrisOsc
				text-decoration none
		a
			
			&:hover, &:active, &:focus
				background-color $GrisOsc
				text-decoration none

.contenedor-general-notas
	background-color $Blanco
	padding 30px

.cont-texto-interna
	margin-bottom 3%

ul.menu-internaB-opci
	margin 0
	padding 0
	height 50px
	
	li
		list-style none
		float left
		padding 12px 0
		width calc(100% / 4)
		padding 15px
		text-align center
		font-size 1.5rem
		
		&:last-child
			border none
		
		&:hover, &:active, &:focus
			background-color $Agua
		
		a
			color $AzulOsc
			font-family $RobotoB
			
			&:hover, &:active, &:focus
				color $GrisOsc
				text-decoration none
.opcion1
	background-color $VerdeClaB

.opcion2
	background-color $VerdeCla

.opcion3
	background-color $Agua2

.opcion4
	background-color $Agua3

.line-div
	height 1px
	background linear-gradient(to right, rgba(89,209,217,1) 0%,rgba(89,209,217,0) 100%)
	width 100%
	margin 30px 0
	
.cont-banner-interna
	padding-top 8.2%




